{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "app",
        "rootDirs": [
            "src",
            "../infotainment-pi-core/src"
        ],
        "typeRoots": [
            "src/typings"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/typings/**/*.d.ts",
        "typings/ws/index.d.ts"
    ]
}